  <body>
    
    <% var x=0 %>
    <div class="todo">
      <div class="card shadow-lg mb-7 " style="width: 18rem;">
        <ul class="list-group list-group-flush">

           <li class="list-group-item First">  <h4>TODO App</h4> </li>

            <form action= "/create" method="post"> 
           <li  class="list-group-item Second"> DESCRIPTION <br>
            <div class="input-group mb-3 ">
            <input type="text" autocomplete="off" name="worktodo" class="form-control" placeholder="what do you want to add"  aria-describedby=" Disabled button-addon2" required>
            </div></li>


            <li  class="list-group-item Third">
            <div class="row g-3">
            <div class="col"> CATEGORY
            <input name ="category" autocomplete="off" type="text" class="form-control" placeholder="choose category" aria-describedby=" Disabled button-addon2" required>
            </div>
            <div class="col"> DUE DATE
              <input type="date" name="date" class="form-control" placeholder="dd/mm/yy" >   
            </div>
          </div></li>


          <li  class="list-group-item Fourth">
            <button  name="button" type="button submit" class="btn btn-secondary">Add Task</button>
            <a href="/delete/?id=<%=listtodo[x]._id %>">
            <button name="del-button" type="button" class="btn btn-outline-secondary">Delete Task</button></a>
            </li></form>

            
              <% for(var i=1;i<listtodo.length;i++){ %>
                <li  class="list-group-item  Fifth">        
                <input  onclick="myFunction(i)" class="check" type="checkbox">                          
                 You have to <%=listtodo[i].name %> <br>
                <div style="font-size: x-small; margin-left: 17px;"> Due date : <%=listtodo[i].date %></div>
                <button class="category"> <%=listtodo[i].category %> </button> 
                </li>
                <% } %>              
            

            

        </ul>
     </div>
    </div>  


    














































